<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhubingning.appcolorchange.MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:textSize="20sp"
        android:text="Here is a fool Application that try to change App Color by the color of mobile case's color"/>

    <Button
        android:id="@+id/button_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Color"
        android:layout_below="@id/text"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="312dp"/>
    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Color"
        android:layout_below="@id/button_change"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="312dp"/>

</RelativeLayout>
